<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent" android:layout_width="match_parent">

    <EditText
        android:id="@+id/chosen_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/chosen_time"
        android:layout_marginTop="37dp" />

    <Button
        android:id="@+id/date_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/time_picker_button"
        android:layout_alignTop="@+id/chosen_date"
        android:fontFamily="sans-serif"
        android:text="SELECT DATE"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/chosen_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/create_appointment"
        android:layout_marginTop="117dp" />

    <Button
        android:id="@+id/time_picker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/chosen_time"
        android:layout_marginEnd="40dp"
        android:fontFamily="sans-serif"
        android:text="SELECT TIME"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold" />

    <Button
        android:id="@+id/create_appointment"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/date_picker_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="177dp"
        android:fontFamily="sans-serif"
        android:onClick="loadConfirmationPage"
        android:text="Create an appointment"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold" />
</RelativeLayout>