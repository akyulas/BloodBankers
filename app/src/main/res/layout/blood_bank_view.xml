<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bloodBankLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Bank Location"
        android:textSize = "25dp"
        />

    <TextView
        android:id="@+id/bloodDonationType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donation Type"
        android:textSize = "20dp"
        android:layout_below="@+id/bloodBankLocation"
        />

    <TextView
        android:id="@+id/bloodBankAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Bank Location"
        android:textSize = "20dp"
        android:layout_below="@+id/bloodDonationType"
        />

    <TextView
        android:id="@+id/bloodBankPostalCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal Code"
        android:textSize = "20dp"
        android:layout_below="@+id/bloodBankAddress"
        />

</RelativeLayout>